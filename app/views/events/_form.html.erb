<div class="container_form">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<h2><%= @submit_marker %></h2>
<%= form_for(@event, html: { multipart: true }) do |f| %>
  <p>
    <%= f.label :event_title %><br/>
    <%= f.text_field :event_title, class: 'form-control'%><br/>
  </p>
  <p>
    <%= f.label :event_content %><br/>
    <%= f.text_area :event_content, class: 'form-control'%><br/>
  </p>
  <p>
    <%= f.label :event_date %><br/>
    <%= f.text_field :event_date, class: 'form-control'%><br/>
  </p>
  <p class="picture">
    <%= f.label :event_picture %><br/>
    <%= f.file_field :picture, class: 'form-control' %>
  </p>
 
  <p>
    <%= f.submit @submit_marker,class: "btn btn-primary"%>
    
  </p>
<% end %>
</div>
</div>
</div>